generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model usuario {
  id     Int    @id @default(autoincrement())
  email  String @unique
  name   String @db.VarChar(250)
  avatar String @db.Text
}

model artista {
  id                        Int      @id @default(autoincrement())
  name                      String   @db.VarChar(250)
  avatar                    String   @db.Text
  musicas                   musica[] @relation("artistatomusica")
}

model musica {
  id                         Int       @id @default(autoincrement())
  name                       String    @db.VarChar(250)
  avatar                     String    @db.Text
  artista                    artista?  @relation("artistatomusica", fields: [artistaId], references: [id], onUpdate: Restrict)
  artistaId                  Int?      @map("artistaID")
}
