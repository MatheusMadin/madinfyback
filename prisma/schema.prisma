// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model usuario {
  id     Int    @id @default(autoincrement())
  email  String @unique
  name   String @db.VarChar(250)
  avatar String @db.Text
}

model artista {
  id       Int      @id @default(autoincrement())
  name     String   @db.VarChar(250)
  avatar   String   @db.Text
  musicas  musica[] 
}

model musica {
  id         Int       @id @default(autoincrement())
  name       String    @db.VarChar(250)
  avatar     String    @db.Text
  artistas   artista[] 
}

